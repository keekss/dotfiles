{
    "name": "Base Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "postCreateCommand": "bash /workspaces/dotfiles/.devcontainer/base/setup.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "GitHub.vscode-github-actions",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "mikestead.dotenv",
                "timonwong.shellcheck",
                "eamodio.gitlens",
                "zhuangtongfa.material-theme",
                "redhat.vscode-yaml"
            ]
        }
    }
}
